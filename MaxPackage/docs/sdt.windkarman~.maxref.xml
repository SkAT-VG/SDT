<c74object name="sdt.windkarman~">

	<digest>
		[gases] Howling / whistling wind sound.
	</digest>

	<description>
		<o>sdt.windkarman~</o> simulates Kármán vortices caused by airflows across thin obstacles, such as a tree branch or a suspended wire.
		Whistling / howling is produced by the repeating pattern of swirling vortices caused by the unsteady separation of airflow around the object.
		It takes two control parameters: the wind <i>speed</i>, and the <i>diameter</i> of the obstacle.
	</description>

	<!--METADATA-->
	<metadatalist>
		<metadata name="tag">Sound Design Toolkit</metadata>
	</metadatalist>

	<!--INLETS
	<inletlist>
		<inlet id="0" type="signal">
			<digest>Wind speed [0.0, 1.0]</digest>
			<description></description>
		</inlet>
	</inletlist>
	-->

	<!--OUTLETS
	<outletlist>
		<outlet id="0" type="signal">
			<digest>Audio signal.</digest>
		</outlet>
	</outletlist>
	-->

	<!--ARGUMENTS
	<objarglist>
		<objarg name="" optional="" type="">
			<digest></digest>
		</objarg>
	</objarglist>-->

	<!--MESSAGES-->
	<methodlist>
		<method name="signal">
			<digest>Wind speed [0., 1.].</digest>
			<description></description>
		</method>
	</methodlist>

	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="diameter" get="1" set="1" type="float" size="1" >
		    <digest>Size of the obstacle (mm).</digest>
		    <description></description>
	  </attribute>
	</attributelist>

	<!--SEEALSO-->
	<seealsolist>
		<seealso name="sdt.windflow~"/>
		<seealso name="sdt.windcavity~"/>
		<seealso name="sdt.explosion~"/>
	</seealsolist>

</c74object>
